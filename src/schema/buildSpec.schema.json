{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "BuildSpec Schema",
  "description": "Schema for BuildRunner build specifications",
  "required": ["projectId", "title", "version", "updatedAt", "milestones"],
  "properties": {
    "projectId": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "milestones": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/milestone"
      }
    }
  },
  "definitions": {
    "milestone": {
      "type": "object",
      "required": ["id", "title", "steps"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      }
    },
    "step": {
      "type": "object",
      "required": ["id", "title", "microsteps"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "microsteps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/microstep"
          }
        }
      }
    },
    "microstep": {
      "type": "object",
      "required": ["id", "title", "status", "criteria"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "type": "string",
          "enum": ["todo", "doing", "done"]
        },
        "criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "links": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "format": "uri"
          }
        },
        "depends_on": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "owner": {
          "type": "string",
          "minLength": 1
        },
        "effort_points": {
          "type": "number",
          "minimum": 1,
          "maximum": 100
        },
        "impact_score": {
          "type": "number",
          "minimum": 1,
          "maximum": 10
        },
        "priority": {
          "type": "string",
          "enum": ["P1", "P2", "P3"]
        },
        "risk_level": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "risk_notes": {
          "type": "string"
        },
        "demo_script": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "rollback_plan": {
          "type": "string"
        },
        "post_check": {
          "type": "string"
        }
      }
    }
  }
}
